<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPopupDialogButtonPressed">
    <item>
        <selector>
            <item android:state_pressed="true" >
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorPopupDialogStyledButtonStroke" />
                    <corners android:radius="32dp" />
                    <solid android:color="@color/colorPopupDialogButtonPressed" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/colorPopupDialogStyledButtonStroke" />
                    <corners android:radius="32dp" />
                    <solid android:color="@color/colorPopupDialogButtonNormal" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>